<div class="high_likes_topics box">
  <h2 class="title">流行話題</h2>
  <ul>
    <% @topics.each do |item| %>
      <li>
        <%= user_avatar_tag(item.user, :small) %>
        <%= link_to(item.title, topic_path(item))%>
        <span class="count"><%= item.likes_count %> 人喜歡</span>
      </li>
    <% end %>
  </ul>
</div>