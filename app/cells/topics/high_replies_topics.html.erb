<div class="high_replies_topics box">
  <h2 class="title">熱門話題</h2>
  <ul>
    <% @topics.each do |item| %>
      <li> 
        <%= user_avatar_tag(item.user, :small) %>
        <%= link_to(item.title, topic_path(item))%>
        <span class="count"><%= item.replies_count %> 回應</span>
      </li>
    <% end %>
  </ul>
</div>