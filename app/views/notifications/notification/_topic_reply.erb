<%
  reply = notification.reply
  topic = reply.topic
  action_label = ""
  if !owner?(topic)
    action_label = "追蹤"
  end
%>
<td class="face">
  <%= user_avatar_tag(reply.user, :normal) %>
</td>
<td>
  <h3>
    <span class="user">
      <%= user_name_tag(reply.user) %>
    </span>
    回應了你<%= action_label %>的主題：
    <%= render_topic_title(topic) %>
    <% if !notification.read? %>
      <span class="new label label-warning">新</span>
    <% end %>
  </h3>
  <%- if reply.present? -%>
    <div class="body md_body">
      <%= raw reply.body_html %>
    </div>
  <%- end -%>
</td>
